@model IEnumerable<Microsoft.AspNetCore.Identity.IdentityUser>

@{
    ViewData["Title"] = "User Management";
}

<h2>@ViewData["Title"]</h2>

<table class="table">
    <thead>
    <tr>
        <th>Email</th>
        <th>Actions</th>
    </tr>
    </thead>
    <tbody>
    @foreach (var user in Model)
    {
        <tr>
            <td>@user.Email</td>
            <td>
                <!-- Edit button (link to edit user action) -->
                <a asp-action="EditUser" asp-route-id="@user.Id" class="btn btn-primary">Edit</a>
                <!-- Delete button (can open a confirmation modal or direct link to delete action) -->
                <a asp-action="DeleteUser" asp-route-id="@user.Id" class="btn btn-danger">Delete</a>
            </td>
        </tr>
    }
    </tbody>
</table>